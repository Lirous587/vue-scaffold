root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,jsx,mjs,cjs,ts,tsx,mts,cts,vue,css,scss,sass,less,styl}]
indent_size = 2
indent_style = space
max_line_length = 100

[*.{json,jsonc}]
indent_size = 2
indent_style = space

[*.{md,markdown}]
trim_trailing_whitespace = false
max_line_length = off

[*.{yml,yaml}]
indent_size = 2
indent_style = space

[*.html]
indent_size = 2
indent_style = space
max_line_length = 120

[Makefile]
indent_style = tab

[*.py]
indent_size = 4
max_line_length = 88